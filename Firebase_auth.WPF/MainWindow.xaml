<Window x:Class="Firebase_auth.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Firebase_auth.WPF"
        xmlns:views="clr-namespace:Firebase_auth.WPF.Views"
        xmlns:vms="clr-namespace:Firebase_auth.WPF.Viewmodels"
        mc:Ignorable="d"
        Title="Autentykacja" Height="450" Width="800">
    <Grid>

        <ContentControl Content="{Binding CurrentViewModel}">
            <ContentControl.Resources>
                <DataTemplate DataType="{x:Type vms:RegisterViewModel}">
                    <views:RegisterView />
                </DataTemplate>
                <DataTemplate DataType="{x:Type vms:LoginViewModel}">
                    <views:LoginView />
                </DataTemplate>
                <DataTemplate DataType="{x:Type vms:CompanyNameViewModel}">
                    <views:CompanyNameView />
                </DataTemplate>
            </ContentControl.Resources>
            
        </ContentControl>
    </Grid>
</Window>
